#include <iostream>

using namespace std;

int lengthOfLastWord(const char *s);
int main() {
  const char* s = "sdfjsdlkfjsldjf";
  cout << lengthOfLastWord(s) << endl;
  return 0;
}


int lengthOfLastWord(const char *s) {
  int count = 0;
  int last = 0;
  while(*s != '\0') {
    cout << *s;
    if (*s == ' ') {
      last = count;
      count = 0;
      continue;
    }
    s++;
    count++;
  }
        
  if (count == 0)
    return last;
  return count;
}
